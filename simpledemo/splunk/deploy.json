{
    "id": "/splunk/search-head",
    "instances": 1,
    "cpus": 1.0,
    "mem": 1024,
    "disk": 128,
    "constraints": [["hostname", "CLUSTER", "172.31.2.11"]],
    "container": {
	"type": "DOCKER",
	"docker": {
	    "image": "172.31.2.11:31000/splunk:6.2.3",
	    "network": "BRIDGE",
	    "portMappings": [
		{ "containerPort": 8000, "hostPort": 0 },
		{ "containerPort": 8089, "hostPort": 0 },
		{ "containerPort": 9997, "hostPort": 0 }
	    ],
	    "forcePullImage": true
	},
	"volumes": [{
	    "containerPath": "/opt/splunk/var",
	    "hostPath": "/var/splunk-container",
            "mode": "RW"
	},{
	    "containerPath": "/usr/local/apps",
	    "hostPath": "/usr/local/apps",
            "mode": "RW"
	}]
    },
    "healthChecks": [{
	"protocol": "HTTP",
	"path": "/",
	"portIndex": 0,
	"gracePeriodSeconds": 5,
	"intervalSeconds": 20,
	"maxConsecutiveFailures": 3,
	"backoffSeconds":1,
	"backoffFactor": 1.15,
	"timeoutSeconds": 10
    }],
    "ports": [ 0, 0, 0 ]
}
