{
    "id": "/docker/registry",
    "instances": 1,
    "cpus": 0.5,
    "mem": 256.0,
    "disk": 128,
    "constraints": [["hostname", "CLUSTER", "172.31.2.11"]],
    "container": {
	"type": "DOCKER",
	"docker": {
	    "image": "registry:2",
	    "network": "BRIDGE",
	    "portMappings": [
		{ "containerPort": 5000, "hostPort": 0 }
	    ],
	    "parameters": []
	},
	"volumes": [{
		"hostPath": "/opt/docker-registry/data",
		"containerPath": "/storage",
		"mode": "RW"
	}]
    },
    "healthChecks": [{
        "protocol": "HTTP",
        "path": "/v2",
        "gracePeriodSeconds": 3,
        "intervalSeconds": 10,
        "timeoutSeconds": 10,
        "maxConsecutiveFailures": 3
    }],
    "env": {
	"SETTINGS_FLAVOR": "local",
	"STORAGE_PATH": "/storage"
    },
    "ports": [ 0 ]
}
