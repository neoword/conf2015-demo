{
    "id": "/conf2015-demo/simpleapp",
    "instances": 1,
    "cpus": 0.5,
    "mem": 64,
    "disk": 150,
    "constraints": [["hostname", "CLUSTER", "172.31.2.11"]],
    "container": {
	"docker": {
	    "type": "DOCKER",
	    "image": "172.31.2.11:31000/conf2015-demo/simpleapp:0.1",
	    "parameters": [],
	    "network": "BRIDGE",
	    "portMappings": [
		{ "containerPort": 5000, "hostPort": 0 }
	    ],
	    "forcePullImage": true
	},
	"volumes": [{
	    "containerPath": "/usr/local/apps",
	    "hostPath": "/usr/local/apps",
            "mode": "RW"
	}]
    },
    "healthChecks": [{
	"protocol": "HTTP",
	"path": "/health",
	"portIndex": 0,
	"gracePeriodSeconds": 5,
	"intervalSeconds": 20,
	"maxConsecutiveFailures": 3,
	"backoffSeconds":1,
	"backoffFactor": 1.15,
	"timeoutSeconds": 10
    }],
    "ports": [ 0 ]
}
